<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.ohmage.funf" >

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.BATTERY_STATS" />
    <uses-permission android:name="android.permission.READ_HISTORY_BOOKMARKS" />
    <!-- New permission for browser history -->
    <uses-permission android:name="com.android.browser.permission.READ_HISTORY_BOOKMARKS" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.READ_SMS" />
    <uses-permission android:name="android.permission.READ_CALL_LOG" />
    <uses-permission android:name="android.permission.GET_TASKS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- For running on boot -->
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_statistics"
        android:label="@string/app_name"
        android:theme="@style/DialogTheme" >

        <service android:name="org.ohmage.funf.OhmageFunfManager" >
            <intent-filter>
				<action android:name="android.intent.action.PACKAGE_INSTALL" />
				<action android:name="android.intent.action.PACKAGE_ADDED" />

                <action android:name="android.intent.action.BATTERY_CHANGED" />
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.DOCK_EVENT" />
                <action android:name="android.intent.action.SCREEN_OFF" />
                <action android:name="android.intent.action.ACTION_SCREEN_ON" />
                <action android:name="android.intent.action.USER_PRESENT" />
				<data android:scheme="package"/>
            </intent-filter>

            <meta-data
                android:name="default"
                android:value="@string/ohmage_pipeline" />
        </service>

        <activity
            android:name="org.ohmage.funf.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver
            android:name=".Launcher"
            android:enabled="true"
            android:exported="true" >
			<intent-filter>
				<action android:name="android.intent.action.BATTERY_CHANGED" />
				<action android:name="android.intent.action.BOOT_COMPLETED" />
				<action android:name="android.intent.action.DOCK_EVENT" />
				<action android:name="android.intent.action.SCREEN_OFF" />
				<action android:name="android.intent.action.ACTION_SCREEN_ON" />
				<action android:name="android.intent.action.USER_PRESENT" />
			</intent-filter>
        </receiver>
    </application>

</manifest>
